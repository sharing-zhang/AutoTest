{
  "scanner_file": {
    "dialog_title": "扫描文件脚本-参数配置",
    "parameters": [
      {
        "name": "directory",
        "type": "text",
        "label": "目录路径",
        "required": true,
        "default": "C:\\temp",
        "placeholder": "例如: C:\\temp 或 /home/user/documents"
      },
      {
        "name": "file_extensions",
        "type": "checkbox",
        "label": "文件后缀名",
        "options": [
          ".txt",
          ".log",
          ".json",
          ".csv",
          ".xml",
          ".py",
          ".js",
          ".html",
          ".css",
          ".md"
        ],
        "required": false,
        "multiple": true,
        "default": [
          ".txt",
          ".log"
        ]
      },
      {
        "name": "recursive",
        "type": "switch",
        "label": "递归扫描",
        "required": false,
        "default": true
      },
      {
        "name": "max_depth",
        "type": "number",
        "label": "最大深度",
        "required": false,
        "default": 3,
        "min": 0,
        "max": 10
      },
      {
        "name": "include_hidden",
        "type": "switch",
        "label": "包含隐藏文件",
        "required": false,
        "default": false
      },
      {
        "name": "output_format",
        "type": "select",
        "label": "输出格式",
        "options": [
          "list",
          "detailed",
          "tree"
        ],
        "required": false,
        "default": "list"
      }
    ]
  },
  "check_Reward": {
    "dialog_title": "检查奖励配置脚本-参数配置",
    "parameters": [
      {
        "name": "directory",
        "type": "text",
        "label": "目录路径",
        "required": true,
        "default": "C:\\temp",
        "placeholder": "例如: C:\\temp 或 /home/user/documents"
      },
      {
        "name": "file_name",
        "type": "text",
        "label": "需要检查的文件名",
        "required": true,
        "default": "POINT_PROGRESS_REWARD.data.txt",
        "placeholder": "仅支持单个文件名"
      },
      {
        "name": "block_name",
        "type": "text",
        "label": "配置块名称",
        "required": true,
        "default": "progressRewards"
      },
      {
        "name": "rules",
        "type": "group-list",
        "label": "配置项组(奖励ID、奖励数量ID、最大奖励值)",
        "required": true,
        "item_fields": [
          { "name": "reward_id", "type": "text", "label": "reward_id", "placeholder": "奖励ID，支持正则或精确值" },
          { "name": "count_id", "type": "text", "label": "count_id", "placeholder": "数量ID" },
          { "name": "max_reward", "type": "number", "label": "max_reward", "min": 0 , "addonAfter": "最大奖励值" }
        ],
        "description": "每组包含：奖励ID、数量ID、最大奖励值"
      }
    ]
  },
  "check_ConfigTime": {
    "dialog_title": "检查配置时间脚本-参数配置",
    "parameters": [
      {
        "name": "directory",
        "type": "text",
        "label": "目录路径",
        "required": true,
        "default": "C:\\temp",
        "placeholder": "例如: C:\\temp 或 /home/user/documents"
      },
      {
        "name": "file_names",
        "type": "tags",
        "label": "需要检查的配置文件",
        "required": false,
        "multiple": true,
        "default": [
          "TIMER_MAIN.data",
          "TIMER_MAIN.data.txt",
          "timer_main.data",
          "timer_main.data.txt"
        ],
        "placeholder": "输入文件名，按回车添加"
      },
      {
        "name": "recursive",
        "type": "switch",
        "label": "递归扫描子目录",
        "required": false,
        "default": false
      },
      {
        "name": "encoding",
        "type": "select",
        "label": "文件编码",
        "options": [
          "UTF-16",
          "UTF-8",
          "GBK",
          "ASCII"
        ],
        "required": false,
        "default": "UTF-16"
      },
      {
        "name": "expected_days",
        "type": "tags",
        "label": "正确的活动天数",
        "required": false,
        "multiple": true,
        "default": [
          3,
          7,
          14
        ],
        "placeholder": "输入天数，按回车添加（例如：3, 7, 14）",
        "description": "输入允许的活动持续天数，支持多个值"
      }
    ]
  },
  "checkFileName": {
    "dialog_title": "检查文件名脚本-参数配置",
    "parameters": [
      {
        "name": "root_path",
        "type": "text",
        "label": "目录路径",
        "required": true,
        "default": "D:\\fishdev",
        "placeholder": "例如: D:\\fishdev 或 /path/to/unity/project"
      },
      {
        "name": "check_extension",
        "type": "switch",
        "label": "扩展名纯小写",
        "required": false,
        "default": true,
        "description": "文件扩展名纯小写检查\n(确保跨平台兼容性)"
      },
      {
        "name": "check_duplicate",
        "type": "switch",
        "label": "检查重名文件",
        "required": false,
        "default": true,
        "description": "检查Prefab文件是否存在重名"
      }
    ]
  }
}