{
  "check_Reward": {
    "dialog_title": "检查奖励配置",
    "parameters": [
      {
        "name": "directory",
        "type": "text",
        "label": "目录路径",
        "required": true,
        "default": "C:\\temp",
        "placeholder": "例如: C:\\temp 或 /home/user/documents"
      },
      {
        "name": "file_name",
        "type": "text",
        "label": "需要检查的文件名",
        "required": true,
        "default": "POINT_PROGRESS_REWARD.data.txt",
        "placeholder": "仅支持单个文件名"
      },
      {
        "name": "block_name",
        "type": "text",
        "label": "配置块名称",
        "required": true,
        "default": "progressRewards"
      },
      {
        "name": "rules",
        "type": "group-list",
        "label": "配置项组",
        "required": true,
        "item_fields": [
          { "name": "reward_id", "type": "text", "label": "reward_id", "placeholder": "奖励ID，支持正则或精确值" },
          { "name": "count_id", "type": "text", "label": "count_id", "placeholder": "数量ID" },
          { "name": "max_reward", "type": "number", "label": "max_reward", "min": 0 , "addonAfter": "最大奖励值" }
        ],
        "description": "每组包含：奖励ID、数量ID、最大奖励值"
      }
    ]
  },
  "check_ConfigTime": {
    "dialog_title": "检查配置时间",
    "parameters": [
      {
        "name": "directory",
        "type": "text",
        "label": "目录路径",
        "required": true,
        "default": "D:\\desk\\work\\test",
        "placeholder": "例如: C:\\temp 或 /home/user/documents"
      },
      {
        "name": "file_names",
        "type": "tags",
        "label": "需要检查的配置文件",
        "required": false,
        "multiple": true,
        "default": [
        
          "TIMER_MAIN.data.txt"
        ],
        "placeholder": "输入文件名，按回车添加"
      },
      {
        "name": "start_time_field",
        "type": "text",
        "label": "开始时间对应参数",
        "required": true,
        "default": "openTime",
        "placeholder": "输入配置中开始时间的参数"
      },
      {
        "name": "end_time_field",
        "type": "text",
        "label": "结束时间对应参数",
        "required": true,
        "default": "endTime",
        "placeholder": "输入配置中结束时间的参数"
      },
      {
        "name": "recursive",
        "type": "switch",
        "label": "递归扫描子目录",
        "required": false,
        "default": false
      },
      {
        "name": "encoding",
        "type": "select",
        "label": "文件编码",
        "options": [
          "UTF-16",
          "UTF-8",
          "GBK",
          "ASCII"
        ],
        "required": false,
        "default": "UTF-16"
      },
      {
        "name": "expected_days",
        "type": "tags",
        "label": "正确的活动天数",
        "required": false,
        "multiple": true,
        "default": [
          3,
          7,
          14
        ],
        "placeholder": "输入天数，按回车添加（例如：3, 7, 14）",
        "description": "输入允许的活动持续天数，支持多个值"
      }
    ]
  },

  "checkConfigExist": {
    "dialog_title": "检查配置路径存在性",
    "parameters": [
      {
        "name": "config_file",
        "type": "text",
        "label": "配置文件地址",
        "required": true,
        "default": "D:\\desk\\work\\test\\FISH.data11.txt",
        "placeholder": "配置文件文件地址，例如D:\\TimeConfig\\FISH.data.txt"
      },
      {
        "name": "project_root",
        "type": "text",
        "label": "工程文件目录",
        "required": true,
        "default": "D:\\",
        "description": "输入工程文件的目录，支持输入精确or大致路径"
      },
      {
        "name": "path_fields_param",
        "type": "text",
        "label": "配置参数名",
        "required": true,
        "default": "assetName",
        "description": "输入想要查找的配置参数名"
      },
      {
        "name": "custom_extensions_param",
        "type": "checkbox",
        "label": "文件后缀名",
        "options": [
          ".controller", ".meta", ".prefab", ".txt", ".unity"],
        "required": false,
        "multiple": true,
        "default": [".txt"],
        "description": "选择要检查的文件后缀类型，可多选。如果不选择任何项，将检查所有文件"
      }
    ]
  },

  "checkFileName": {
    "dialog_title": "检查文件名合法性",
    "parameters": [
      {
        "name": "root_path",
        "type": "text",
        "label": "目录路径",
        "required": true,
        "default": "D:\\fishdev",
        "placeholder": "例如: D:\\fishdev 或 /path/to/unity/project"
      },
      {
        "name": "regex_pattern",
        "type": "text",
        "label": "正则表达式",
        "required": true,
        "default": "^[a-zA-Z0-9_]+\\.[a-z]+$",
        "description": "用于匹配文件名的正则表达式，例如：^[A-Z][a-zA-Z0-9]*\\.cs$ 表示PascalCase的C#文件"
      },
      {
        "name": "file_extensions",
        "type": "checkbox",
        "label": "文件后缀名",
        "options": [
          ".anim", ".asmdef", ".bat", ".c", ".cmake",
          ".controller", ".cs", ".dll", ".exe", ".exr",
          ".FBX", ".gif", ".h", ".java", ".jpg",
          ".json", ".log", ".lua", ".mat", ".md",
          ".meta", ".mp3", ".mp4", ".pdb", ".pdf",
          ".png", ".prefab", ".psd", ".py", ".shader",
          ".svg", ".tga", ".txt", ".unity", ".xlsx",
          ".xml"
        ],
        "required": false,
        "multiple": true,
        "default": [".txt"],
        "description": "选择要检查的文件后缀类型，可多选。如果不选择任何项，将检查所有文件"
      }
    ]
  },
  "checkconfigempty": {
    "dialog_title": "检查配置不为空",
    "parameters": [
      {
        "name": "file_path",
        "type": "text",
        "label": "配置文件地址",
        "required": true,
        "default": "D:\\TimeConfig\\FISH.data.txt",
        "placeholder": "配置文件文件地址，例如D:\\TimeConfig\\FISH.data.txt"
      },
      {
        "name": "parameters_str",
        "type": "text",
        "label": "配置参数名",
        "required": true,
        "default": "id",
        "description": "输入想要查找的配置参数名"
      }
    ]
  },
  "checkconfigunique": {
    "dialog_title": "检查配置唯一性",
    "parameters": [
      {
        "name": "file_path",
        "type": "text",
        "label": "配置文件地址",
        "required": true,
        "default": "D:\\TimeConfig\\FISH.data.txt",
        "placeholder": "配置文件文件地址，例如D:\\TimeConfig\\FISH.data.txt"
      },
      {
        "name": "parameters_str",
        "type": "text",
        "label": "配置参数名",
        "required": true,
        "default": "id",
        "description": "输入想要查找的配置参数名"
      }
    ]
  }
  ,
  "check_TextQuality": {
    "dialog_title": "文本质量检查",
    "parameters": [
      {
        "name": "directory",
        "type": "text",
        "label": "目录路径",
        "required": true,
        "default": "D:\\",
        "placeholder": "例如: C:\\temp 或 /home/user/docs"
      },
      {
        "name": "file_name",
        "type": "text",
        "label": "文件名",
        "required": true,
        "default": "readme.txt",
        "placeholder": "需要检查的单个文件名"
      },
      {
        "name": "field",
        "type": "text",
        "label": "字段名(可选)",
        "required": false,
        "placeholder": "如从 key=\"value\"; 中抽取某字段值，例如 desc"
      }
    ]
  }
}