{
  "scanner_file": [
    {
      "name": "directory",
      "type": "text",
      "label": "目录路径",
      "required": true,
      "default": "C:\\temp",
      "placeholder": "例如: C:\\temp 或 /home/user/documents"
    },
    {
      "name": "file_extensions",
      "type": "checkbox",
      "label": "文件后缀名",
      "options": [".txt", ".log", ".json", ".csv", ".xml", ".py", ".js", ".html", ".css", ".md"],
      "required": false,
      "multiple": true,
      "default": [".txt", ".log"]
    },
    {
      "name": "recursive",
      "type": "switch",
      "label": "递归扫描",
      "required": false,
      "default": true
    },
    {
      "name": "max_depth",
      "type": "number",
      "label": "最大深度",
      "required": false,
      "default": 3,
      "min": 0,
      "max": 10
    },
    {
      "name": "include_hidden",
      "type": "switch",
      "label": "包含隐藏文件",
      "required": false,
      "default": false
    },
    {
      "name": "output_format",
      "type": "select",
      "label": "输出格式",
      "options": ["list", "detailed", "tree"],
      "required": false,
      "default": "list"
    }
  ],
  "check_ConfigTime": [
    {
      "name": "directory",
      "type": "text",
      "label": "目录路径",
      "required": true,
      "default": "C:\\temp",
      "placeholder": "例如: C:\\temp 或 /home/user/documents"
    },
    {
      "name": "file_names",
      "type": "tags",
      "label": "需要检查的配置文件",
      "required": false,
      "multiple": true,
      "default": [
        "TIMER_MAIN.data",
        "TIMER_MAIN.data.txt",
        "timer_main.data",
        "timer_main.data.txt"
      ],
      "placeholder": "输入文件名，按回车添加"
    },
    {
      "name": "recursive",
      "type": "switch",
      "label": "递归扫描子目录",
      "required": false,
      "default": false
    },
    {
      "name": "encoding",
      "type": "select",
      "label": "文件编码",
      "options": ["UTF-16", "UTF-8", "GBK", "ASCII"],
      "required": false,
      "default": "UTF-16"
    },
    {
      "name": "expected_days",
      "type": "tags",
      "label": "正确的活动天数",
      "required": false,
      "multiple": true,
      "default": [3, 7, 14],
      "placeholder": "输入天数，按回车添加（例如：3, 7, 14）",
      "description": "输入允许的活动持续天数，支持多个值"
    }
  ],
  "checkFileName": [
    {
      "name": "unity_root_path",
      "type": "text",
      "label": "目录路径",
      "required": true,
      "default": "C:\\temp",
      "placeholder": "例如: C:\\temp 或 /home/user/documents"
    }
  ]
}
